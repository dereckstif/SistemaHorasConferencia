@model HC_AdminUI.Models.Registro

@{
    ViewData["Title"] = "DetallesPelicula";
}

<h1>DetallesPelicula</h1>

<div>
    <h4>Registro</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Estudiante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Estudiante)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoHoraConferencia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoHoraConferencia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id_Pelicula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id_Pelicula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Archivo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Archivo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Minutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Minutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TemaCentral)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TemaCentral)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
    </dl>
</div>
<form asp-action="Validar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Id_Estudiante" />
    <input type="hidden" asp-for="TipoHoraConferencia" />
    <input type="hidden" asp-for="Id_Actividad" />
    <input type="hidden" asp-for="Id_Pelicula" />
    <input type="hidden" asp-for="FechaRegistro" />
    <input type="hidden" asp-for="Archivo" />
    <input type="hidden" asp-for="Minutos" />
    <input type="hidden" asp-for="TemaCentral" />
    <input type="hidden" asp-for="Descripcion" />
    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <select asp-for="Estado" class="form-select" asp-items="@(new SelectList(ViewBag.Estados))"></select>
    </div>
    <div class="form-group">
        <label asp-for="Retroalimentacion" class="control-label"></label>
        <textarea asp-for="Retroalimentacion" class="form-control"></textarea>
        <span asp-validation-for="Retroalimentacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Validar" class="btn btn-primary" />
    </div>
</form>

