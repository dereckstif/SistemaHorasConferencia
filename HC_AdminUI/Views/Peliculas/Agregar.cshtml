@model HC_AdminUI.Models.Pelicula

@{
    ViewData["Title"] = "Agregar Audiovisual";
}

<h1>Agregar</h1>

<h4>Audiovisual</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Agregar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pais" class="control-label">País de Origen</label>
                <select asp-for="Pais" class="form-select" asp-items="@(new SelectList(ViewBag.Paises))" value=""></select>
            </div>
            <div class="form-group">
                <label asp-for="SegundoPais" class="control-label">Segundo país de origen (si aplica)</label>
                <select asp-for="SegundoPais" class="form-select" asp-items="@(new SelectList(ViewBag.PaisesOpcionales))" ></select>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título del audiovisual</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Director" class="control-label">Dirección</label>
                <input asp-for="Director" class="form-control" />
                <span asp-validation-for="Director" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnioEstreno" class="control-label">Año de estreno</label>
                <input asp-for="AnioEstreno" class="form-control" />
                <span asp-validation-for="AnioEstreno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label">Género</label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label">Descripción</label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuracionMinutos" class="control-label">Duración en minutos</label>
                <input asp-for="DuracionMinutos" class="form-control" />
                <span asp-validation-for="DuracionMinutos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista de audiovisuales</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
